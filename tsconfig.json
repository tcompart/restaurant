{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
